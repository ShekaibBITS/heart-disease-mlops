# =========================================================
# Application
# =========================================================
APP_NAME=heart-disease-api
APP_ENV=local
LOG_LEVEL=INFO

# =========================================================
# FastAPI / Uvicorn
# =========================================================
API_HOST=0.0.0.0
API_PORT=8000

# =========================================================
# MLflow Configuration
# =========================================================

# Use Docker service name in docker-compose / k8s
# Use localhost when running purely local (non-docker)
MLFLOW_TRACKING_URI=http://mlflow:5000

# -------- Model reference (choose ONE strategy) --------

# Strategy A: Load model from specific MLflow run
# (most common for assignments)
MLFLOW_RUN_ID=PUT_YOUR_RUN_ID_HERE
MLFLOW_MODEL_ARTIFACT_PATH=model

# Strategy B: Load model from MLflow Model Registry
# (leave commented if not using registry)
MLFLOW_MODEL_NAME=heart-disease
MLFLOW_MODEL_STAGE=Production

# =========================================================
# Model Load Behavior
# =========================================================

# Do NOT crash API if model is unavailable
MODEL_LOAD_RETRY=true
MODEL_LOAD_RETRY_SECONDS=30

# =========================================================
# Prometheus / Monitoring
# =========================================================
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_ENDPOINT=/metrics

# =========================================================
# Feature / Inference Behavior
# =========================================================
# Default classification threshold
PREDICTION_THRESHOLD=0.5

# =========================================================
# Docker / Kubernetes (optional clarity)
# =========================================================
SERVICE_NAME=heart-api
NAMESPACE=default
